<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Roboto" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Roboto.H1">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">96sp</item>
    </style>

    <style name="Roboto.H2">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">60sp</item>
    </style>

    <style name="Roboto.H3">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="Roboto.H4">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="Roboto.H5">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Roboto.H6">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Roboto.Subtitle1">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Roboto.Subtitle2">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Roboto.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Roboto.Body2">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Roboto.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Roboto.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Roboto.Overline">
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>